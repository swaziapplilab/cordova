<?xml version='1.0' encoding='utf-8'?>
<widget id="za.umsitiwami.eswatinismartschool" version="1.0.0" xmlns="http://www.eswatinismartschool.co.za" xmlns:cdv="http://www.eswatinismartschool.co.za">
    <name>Eswatini Smart School</name>
    <description>
        Boost Education with Technology
    </description>
    <author email="swaziapplilab@gmail.com" href="http://www.swaziapplilab.com">
        Eswatini Smart School Team
    </author>
    <content src="index.html" />
	<preference name="android-targetSdkVersion" value="28"/>
    <preference name="FullScreen" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-inappbrowser" spec="1" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="android">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="logo.png" />
</widget>
